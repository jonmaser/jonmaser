:javascript
	$(document).ready(function() {
	$('#about_me').show();
	$('#about_me').animate({ opacity: 1, top: "-60px" }, 'slow');
	});

	$(document).ready(function() {
	
		$('body *').each( function(){
	   
			var top_of_object = $(this).position().top;
			var bottom_of_window = $(window).scrollTop() + $(window).height();

			if( bottom_of_window < top_of_object  ){
	  
				$(this).addClass('hideme').css({'opacity':'0'});  
			} 
		});
	
		$(window).scroll( function(){
	  
			$('.hideme').each( function(i){
		
				var bottom_of_window = $(window).scrollTop() + $(window).height();
				var top_of_object = $(this).position().top;
		
					if( bottom_of_window > ( top_of_object + 100 )  ){
		  
						$(this).removeClass('hideme').animate({'opacity':'1'},800); 
					}
			}); 
		});
	});;

	$(".quote-image-button").on("click", function() {
		$('.quote-image-button').css('border', '0px solid #fff');
		$(this).css('border','4px solid #fff');
    
		$('.traveler-quote-name').html($(this).data('name'))
		$('.traveler-quote-text').html($(this).data('description'))
	});

	$(".yellow-link").on("click", function() {
		$('#my_beliefs').css('background', '#f5cf87');
	});

	$(".green-link").on("click", function() {
		$('#my_beliefs').css('background', '#76c2af');
	});

	$(".blue-link").on("click", function() {
		$('#my_beliefs').css('background', '#77b3d4');
	});